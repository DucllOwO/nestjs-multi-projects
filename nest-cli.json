{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nestjs-multi-projects/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/nestjs-multi-projects/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/nestjs-multi-projects",
  "projects": {
    "nestjs-multi-projects": {
      "type": "application",
      "root": "apps/nestjs-multi-projects",
      "entryFile": "main",
      "sourceRoot": "apps/nestjs-multi-projects/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nestjs-multi-projects/tsconfig.app.json"
      }
    },
    "spam-mail-detector": {
      "type": "application",
      "root": "apps/spam-mail-detector",
      "entryFile": "main",
      "sourceRoot": "apps/spam-mail-detector/src",
      "compilerOptions": {
        "tsConfigPath": "apps/spam-mail-detector/tsconfig.app.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    },
    "repository": {
      "type": "library",
      "root": "libs/repository",
      "entryFile": "index",
      "sourceRoot": "libs/repository/src",
      "compilerOptions": {
        "tsConfigPath": "libs/repository/tsconfig.lib.json"
      }
    }
  }
}